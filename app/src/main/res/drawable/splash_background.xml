<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary"
                android:centerColor="@color/secondary"
                android:endColor="@color/accent"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Decorative Pattern -->
    <item android:top="50dp" android:left="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_20" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
    
    <item android:bottom="100dp" android:right="30dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_20" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    
    <item android:top="200dp" android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_20" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
    
</layer-list>
