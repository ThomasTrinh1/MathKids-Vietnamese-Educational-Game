<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user progress for cloud backup -->
        <include domain="sharedpref" path="mathkids_preferences.xml" />
        <include domain="database" path="mathkids_database" />
        
        <!-- Exclude temporary and cache data -->
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="temp/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        
        <!-- Exclude cache -->
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>
