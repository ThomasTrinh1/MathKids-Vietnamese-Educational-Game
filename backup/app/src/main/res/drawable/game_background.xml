<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base Color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/blue_light"
                android:endColor="@color/teal_light"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Cloud Pattern -->
    <item android:top="20dp" android:left="10dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_30" />
            <size android:width="120dp" android:height="60dp" />
        </shape>
    </item>
    
    <item android:top="80dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_30" />
            <size android:width="100dp" android:height="50dp" />
        </shape>
    </item>
    
    <item android:bottom="150dp" android:left="30dp">
        <shape android:shape="oval">
            <solid android:color="@color/white_30" />
            <size android:width="90dp" android:height="45dp" />
        </shape>
    </item>
    
</layer-list>
