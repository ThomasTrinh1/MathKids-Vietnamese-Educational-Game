<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Attributes -->
    <declare-styleable name="CustomButton">
        <attr name="activeTrackColor" format="color" />
        <attr name="inactiveTrackColor" format="color" />
        <attr name="thumbColor" format="color" />
        <attr name="buttonStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="accent" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="ProgressView">
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="GameCard">
        <attr name="cardColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="isLocked" format="boolean" />
    </declare-styleable>
</resources>
